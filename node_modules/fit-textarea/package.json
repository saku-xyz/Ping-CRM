{
	"name": "fit-textarea",
	"version": "2.0.0",
	"description": "Automatically expand a <textarea> to fit its content, in a few bytes",
	"keywords": [
		"automatic",
		"autoresize",
		"autosize",
		"avoid scrollbar",
		"event",
		"expand",
		"fit to content",
		"follow",
		"height",
		"increase",
		"input",
		"keypress",
		"resize",
		"scale",
		"stretch",
		"text area",
		"vanilla",
		"vertical"
	],
	"repository": "fregante/fit-textarea",
	"license": "MIT",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "tsc --sourceMap false",
		"test": "run-s build test:*",
		"test:blink": "browserify -p esmify test.js | tape-run --browser chrome",
		"test:gecko": "browserify -p esmify test.js | tape-run --browser firefox",
		"test:lint": "xo",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "off"
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"browserify": "^16.2.2",
		"esmify": "^2.1.1",
		"npm-run-all": "^4.1.3",
		"tape": "^4.10.1",
		"tape-run": "^5.0.0",
		"typescript": "^3.8.3",
		"xo": "^0.24.0"
	}

